<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div id="modal_detalle" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalle de Producto</h4>
            </div>
            <div class="modal-body">               
                <div id="tabla_det_sec"></div>       
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove">Cerrar</span></button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    ObtenerCliente = function (codigo) {
        $.post(
            '/Principal/Detalle', {
            id: codigo
        }, function (res) {
            $('#tabla_det_sec').html(res);
        });
    };
</script>